# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# PostgreSQL Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=3ondb
PG_USER=postgres
PG_PASSWORD=postgres
PG_MAX_POOL=20

# SQLite Configuration
SQLITE_DB_PATH=./data/sqlite/3ondb.db

# Security
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# WebSocket Configuration
WS_PORT=3001

# Storage Tier Configuration
STORAGE_TIER=CORE_NODE
# Options: CORE_NODE, CLUSTER, DATA_CENTER_GRID, PLANETARY, QUANTUM_EXPANSION

# AI Auto-Repair Configuration
AI_REPAIR_ENABLED=true
AI_REPAIR_INTERVAL=300000
AI_REPAIR_THRESHOLD=0.8

# Mirroring Configuration
MIRROR_ENABLED=true
MIRROR_INTERVAL=5000
MIRROR_BATCH_SIZE=100

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000
BACKUP_RETENTION_DAYS=30

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_BUFFER_SIZE=1000

# Ecosystem API Endpoints
API_3ONCORE_URL=http://localhost:4000
API_3ONPAY_URL=http://localhost:4001
API_3ONCASH_URL=http://localhost:4002
API_3ONCHAT_URL=http://localhost:4003
API_3ONAIRE_URL=http://localhost:4004

# Logging
LOG_LEVEL=info
